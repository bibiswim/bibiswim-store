{% comment %}
  Renders a product media gallery. Should be used with 'media-gallery.js'
  Also see 'product-media-modal'

  Accepts:
  - product: {Object} Product liquid object
  - variant_images: {Array} Product images associated with a variant
  - limit: {Number} (optional) When passed, limits the number of media items to render

  Usage:
  {% render 'product-media-gallery' %}
{% endcomment %}

{%- liquid
  if section.settings.hide_variants and variant_images.size == product.media.size
    assign single_media_visible = true
  endif

  if limit == 1
    assign single_media_visible = true
  endif

  assign media_count = product.media.size
  if section.settings.hide_variants and media_count > 1 and variant_images.size > 0
    assign media_count = media_count | minus: variant_images.size | plus: 1
  endif

  if media_count == 1 or single_media_visible
    assign single_media_visible_mobile = true
  endif

  if media_count == 0 or single_media_visible_mobile or section.settings.mobile_thumbnails == 'show' or section.settings.mobile_thumbnails == 'columns' and media_count < 3
    assign hide_mobile_slider = true
  endif

  if section.settings.media_size == 'large'
    assign media_width = 0.65
  elsif section.settings.media_size == 'medium'
    assign media_width = 0.55
  elsif section.settings.media_size == 'small'
    assign media_width = 0.45
  endif

  comment
    Collect all variant featured media IDs to identify which images are variant images
  endcomment
  assign variant_media_ids = '' | split: ','
  for variant in product.variants
    if variant.featured_media != null
      assign variant_media_ids = variant_media_ids | append: variant.featured_media.id | append: ','
    endif
  endfor
  assign variant_media_ids = variant_media_ids | split: ','

  comment
    Get the currently selected variant's featured media
  endcomment
  assign current_variant = product.selected_or_first_available_variant
  assign current_variant_media = current_variant.featured_media
  
  comment
    Get main product image (first non-variant image, or just the first image)
  endcomment
  assign main_product_media = product.media.first
  
  comment
    Determine which image should be active on initial load
    If variant is selected and has different featured media, that should be active
  endcomment
  assign initial_active_is_variant = false
  if current_variant_media != null and current_variant_media.id != main_product_media.id
    assign initial_active_is_variant = true
  endif
-%}

{%- comment -%} Preload all variant images for faster switching {%- endcomment -%}
{%- for variant in product.variants -%}
  {%- if variant.featured_media != null -%}
    <link rel="preload" as="image" href="{{ variant.featured_media | image_url: width: 1200 }}" fetchpriority="low">
  {%- endif -%}
{%- endfor -%}

{%- comment -%} Store variant image data as JSON for instant client-side switching {%- endcomment -%}
<script type="application/json" id="VariantImageData-{{ section.id }}">
  {
    "sectionId": "{{ section.id }}",
    "variants": {
      {%- for variant in product.variants -%}
        "{{ variant.id }}": {
          "id": {{ variant.id }},
          "mediaId": {% if variant.featured_media %}{{ variant.featured_media.id }}{% else %}null{% endif %},
          "imageSrc": {% if variant.featured_media %}"{{ variant.featured_media | image_url: width: 1200 }}"{% else %}null{% endif %},
          "thumbSrc": {% if variant.featured_media %}"{{ variant.featured_media | image_url: width: 416 }}"{% else %}null{% endif %},
          "alt": {% if variant.featured_media %}"{{ variant.featured_media.alt | escape }}"{% else %}""{% endif %}
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    }
  }
</script>

<media-gallery
  id="MediaGallery-{{ section.id }}"
  role="region"
  {% if section.settings.enable_sticky_info %}
    class="product__column-sticky"
  {% endif %}
  aria-label="{{ 'products.product.media.gallery_viewer' | t }}"
  data-desktop-layout="{{ section.settings.gallery_layout }}"
>
  <div id="GalleryStatus-{{ section.id }}" class="visually-hidden" role="status"></div>
  <slider-component id="GalleryViewer-{{ section.id }}" class="slider-mobile-gutter product-gallery-viewer">
    <a class="skip-to-content-link button visually-hidden quick-add-hidden" href="#ProductInfo-{{ section.id }}">
      {{ 'accessibility.skip_to_product_info' | t }}
    </a>
    <ul
      id="Slider-Gallery-{{ section.id }}"
      class="product__media-list contains-media grid grid--peek list-unstyled slider slider--mobile"
      role="list"
    >
      {%- comment -%} 1. Always show main product image first {%- endcomment -%}
      {%- if main_product_media -%}
        <li
          id="Slide-{{ section.id }}-{{ main_product_media.id }}"
          class="product__media-item grid__item slider__slide{% unless initial_active_is_variant %} is-active{% endunless %}{% if single_media_visible %} product__media-item--single{% endif %}{% if main_product_media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
          data-media-id="{{ section.id }}-{{ main_product_media.id }}"
        >
          {%- assign media_position = 1 -%}
          {% render 'product-thumbnail',
            media: main_product_media,
            media_count: media_count,
            position: media_position,
            desktop_layout: section.settings.gallery_layout,
            mobile_layout: section.settings.mobile_thumbnails,
            loop: section.settings.enable_video_looping,
            modal_id: section.id,
            xr_button: true,
            media_width: media_width,
            media_fit: section.settings.media_fit,
            constrain_to_viewport: section.settings.constrain_to_viewport,
            lazy_load: false
          %}
        </li>
      {%- endif -%}
      
      {%- comment -%} 2. Show current variant featured media as second item (this slot will be swapped dynamically via JS) {%- endcomment -%}
      {%- if current_variant_media != null and current_variant_media.id != main_product_media.id -%}
        <li
          id="Slide-{{ section.id }}-{{ current_variant_media.id }}"
          class="product__media-item grid__item slider__slide variant-media-slot{% if initial_active_is_variant %} is-active{% endif %}{% if single_media_visible %} product__media-item--single{% endif %}{% if current_variant_media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
          data-media-id="{{ section.id }}-{{ current_variant_media.id }}"
          data-variant-media-slot="true"
        >
          {%- assign media_position = 2 -%}
          {% render 'product-thumbnail',
            media: current_variant_media,
            media_count: media_count,
            position: media_position,
            desktop_layout: section.settings.gallery_layout,
            mobile_layout: section.settings.mobile_thumbnails,
            loop: section.settings.enable_video_looping,
            modal_id: section.id,
            xr_button: true,
            media_width: media_width,
            media_fit: section.settings.media_fit,
            constrain_to_viewport: section.settings.constrain_to_viewport,
            lazy_load: true
          %}
        </li>
      {%- endif -%}
      
      {%- comment -%} 3. Show remaining NON-VARIANT media (skip main image and all variant images) {%- endcomment -%}
      {%- assign remaining_position = 2 -%}
      {%- for media in product.media -%}
        {%- comment -%} Skip the main product image {%- endcomment -%}
        {%- if media.id == main_product_media.id -%}
          {%- continue -%}
        {%- endif -%}
        
        {%- comment -%} Skip all variant images (they are consolidated into the 2nd slot) {%- endcomment -%}
        {%- assign is_variant_media = false -%}
        {%- assign media_id_string = media.id | append: '' -%}
        {%- for variant_media_id in variant_media_ids -%}
          {%- if media_id_string == variant_media_id -%}
            {%- assign is_variant_media = true -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}
        {%- if is_variant_media -%}
          {%- continue -%}
        {%- endif -%}

        {%- assign remaining_position = remaining_position | plus: 1 -%}
        
        {%- if limit and remaining_position > limit -%}
          {%- break -%}
        {%- endif -%}

        <li
          id="Slide-{{ section.id }}-{{ media.id }}"
          class="product__media-item grid__item slider__slide{% if single_media_visible %} product__media-item--single{% endif %}{% if media.media_type != 'image' %} product__media-item--full{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
          data-media-id="{{ section.id }}-{{ media.id }}"
        >
          {%- liquid
            assign lazy_load = true
          -%}
            {% render 'product-thumbnail',
              media: media,
              media_count: media_count,
              position: remaining_position,
              desktop_layout: section.settings.gallery_layout,
              mobile_layout: section.settings.mobile_thumbnails,
              loop: section.settings.enable_video_looping,
              modal_id: section.id,
              xr_button: true,
              media_width: media_width,
              media_fit: section.settings.media_fit,
              constrain_to_viewport: section.settings.constrain_to_viewport,
              lazy_load: lazy_load
            %}
          </li>
      {%- endfor -%}
    </ul>
    <div class="slider-buttons quick-add-hidden{% if hide_mobile_slider %} small-hide{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter caption">
        <span class="slider-counter--current">1</span>
        <span aria-hidden="true"> / </span>
        <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
        <span class="slider-counter--total">{{ media_count }}</span>
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  </slider-component>
  {%- if first_3d_model -%}
    <button
      class="button button--full-width product__xr-button"
      type="button"
      aria-label="{{ 'products.product.xr_button_label' | t }}"
      data-shopify-xr
      data-shopify-model3d-id="{{ first_3d_model.id }}"
      data-shopify-title="{{ product.title | escape }}"
      data-shopify-xr-hidden
    >
      <span class="svg-wrapper">
        {{- 'icon-3d-model.svg' | inline_asset_content -}}
      </span>
      {{ 'products.product.xr_button' | t }}
    </button>
  {%- endif -%}
  {%- liquid
    assign is_not_limited_to_single_item = false
    if limit == null or limit > 1
      assign is_not_limited_to_single_item = true
    endif
  -%}
  {%- if is_not_limited_to_single_item
    and media_count > 1
    and section.settings.gallery_layout contains 'thumbnail'
    or section.settings.mobile_thumbnails == 'show'
  -%}
    <slider-component
      id="GalleryThumbnails-{{ section.id }}"
      class="thumbnail-slider slider-mobile-gutter quick-add-hidden{% unless section.settings.gallery_layout contains 'thumbnail' %} medium-hide large-up-hide{% endunless %}{% if section.settings.mobile_thumbnails != 'show' %} small-hide{% endif %}{% if media_count <= 3 %} thumbnail-slider--no-slide{% endif %} product-gallery-thumbnails"
    >
      <button
        type="button"
        class="slider-button slider-button--prev{% if media_count <= 3 %} small-hide{% endif %}{% if media_count <= 4 %} medium-hide large-up-hide{% endif %} thumbnail-nav-btn"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
        aria-controls="GalleryThumbnails-{{ section.id }}"
        data-step="3"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <ul
        id="Slider-Thumbnails-{{ section.id }}"
        class="thumbnail-list list-unstyled slider slider--mobile{% if section.settings.gallery_layout == 'thumbnail_slider' %} slider--tablet-up{% endif %}"
      >
        {%- capture sizes -%}
          (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width | minus: 100 | times: media_width | round }} - 4rem) / 4),
          (min-width: 990px) calc(({{ media_width | times: 100 }}vw - 4rem) / 4),
          (min-width: 750px) calc((100vw - 15rem) / 8),
          calc((100vw - 8rem) / 3)
        {%- endcapture -%}

        {%- comment -%} 1. Always show main product image thumbnail first {%- endcomment -%}
        {%- if main_product_media -%}
          {%- liquid
            capture media_index
              if main_product_media.media_type == 'model'
                increment model_index
              elsif main_product_media.media_type == 'video' or main_product_media.media_type == 'external_video'
                increment video_index
              elsif main_product_media.media_type == 'image'
                increment image_index
              endif
            endcapture
            assign media_index = media_index | plus: 1
          -%}
          <li
            id="Slide-Thumbnails-{{ section.id }}-0"
            class="thumbnail-list__item slider__slide"
            data-target="{{ section.id }}-{{ main_product_media.id }}"
            data-media-position="1"
          >
            {%- capture thumbnail_id -%}
              Thumbnail-{{ section.id }}-0
            {%- endcapture -%}
            <button
              class="thumbnail global-media-settings global-media-settings--no-shadow"
              aria-label="{%- if main_product_media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif main_product_media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif main_product_media.media_type == 'video' or main_product_media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
              {%- unless initial_active_is_variant -%}aria-current="true"{%- endunless -%}
              aria-controls="GalleryViewer-{{ section.id }}"
              aria-describedby="{{ thumbnail_id }}"
            >
              {{
                main_product_media.preview_image
                | image_url: width: 416
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '54, 74, 104, 162, 208, 324, 416',
                  id: thumbnail_id,
                  alt: main_product_media.alt
                | escape
              }}
            </button>
          </li>
        {%- endif -%}

        {%- comment -%} 2. Show variant featured media thumbnail as second item (variant slot - will be swapped via JS) {%- endcomment -%}
        {%- if current_variant_media != null and current_variant_media.id != main_product_media.id -%}
          {%- liquid
            capture media_index
              if current_variant_media.media_type == 'model'
                increment model_index
              elsif current_variant_media.media_type == 'video' or current_variant_media.media_type == 'external_video'
                increment video_index
              elsif current_variant_media.media_type == 'image'
                increment image_index
              endif
            endcapture
            assign media_index = media_index | plus: 1
          -%}
          <li
            id="Slide-Thumbnails-{{ section.id }}-variant"
            class="thumbnail-list__item slider__slide variant-thumbnail-slot"
            data-target="{{ section.id }}-{{ current_variant_media.id }}"
            data-media-position="2"
            data-variant-thumbnail-slot="true"
          >
            {%- capture thumbnail_id -%}
              Thumbnail-{{ section.id }}-variant
            {%- endcapture -%}
            <button
              class="thumbnail global-media-settings global-media-settings--no-shadow"
              aria-label="{%- if current_variant_media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif current_variant_media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif current_variant_media.media_type == 'video' or current_variant_media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
              {%- if initial_active_is_variant -%}aria-current="true"{%- endif -%}
              aria-controls="GalleryViewer-{{ section.id }}"
              aria-describedby="{{ thumbnail_id }}"
            >
              {{
                current_variant_media.preview_image
                | image_url: width: 416
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '54, 74, 104, 162, 208, 324, 416',
                  id: thumbnail_id,
                  alt: current_variant_media.alt
                | escape
              }}
            </button>
          </li>
        {%- endif -%}

        {%- comment -%} 3. Show remaining NON-VARIANT media thumbnails {%- endcomment -%}
        {%- assign thumb_position = 2 -%}
        {%- for media in product.media -%}
          {%- comment -%} Skip the main product image {%- endcomment -%}
          {%- if media.id == main_product_media.id -%}
            {%- continue -%}
          {%- endif -%}
          
          {%- comment -%} Skip all variant images {%- endcomment -%}
          {%- assign is_variant_media = false -%}
          {%- assign media_id_string = media.id | append: '' -%}
          {%- for variant_media_id in variant_media_ids -%}
            {%- if media_id_string == variant_media_id -%}
              {%- assign is_variant_media = true -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
          {%- if is_variant_media -%}
            {%- continue -%}
          {%- endif -%}

          {%- assign thumb_position = thumb_position | plus: 1 -%}

          {%- liquid
            capture media_index
              if media.media_type == 'model'
                increment model_index
              elsif media.media_type == 'video' or media.media_type == 'external_video'
                increment video_index
              elsif media.media_type == 'image'
                increment image_index
              endif
            endcapture
            assign media_index = media_index | plus: 1
          -%}
          <li
            id="Slide-Thumbnails-{{ section.id }}-{{ forloop.index }}"
            class="thumbnail-list__item slider__slide"
            data-target="{{ section.id }}-{{ media.id }}"
            data-media-position="{{ thumb_position }}"
          >
            {%- if media.media_type == 'model' -%}
              <span class="thumbnail__badge" aria-hidden="true">
                <span class="svg-wrapper">
                  {{- 'icon-3d-model.svg' | inline_asset_content -}}
                </span>
              </span>
            {%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}
              <span class="thumbnail__badge" aria-hidden="true">
                <span class="svg-wrapper">
                  {{- 'icon-play.svg' | inline_asset_content -}}
                </span>
              </span>
            {%- endif -%}
            {%- capture thumbnail_id -%}
              Thumbnail-{{ section.id }}-{{ forloop.index }}
            {%- endcapture -%}
            <button
              class="thumbnail global-media-settings global-media-settings--no-shadow"
              aria-label="{%- if media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"
              aria-controls="GalleryViewer-{{ section.id }}"
              aria-describedby="{{ thumbnail_id }}"
            >
              {{
                media.preview_image
                | image_url: width: 416
                | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '54, 74, 104, 162, 208, 324, 416',
                  id: thumbnail_id,
                  alt: media.alt
                | escape
              }}
            </button>
          </li>
        {%- endfor -%}
      </ul>
      <button
        type="button"
        class="slider-button slider-button--next{% if media_count <= 3 %} small-hide{% endif %}{% if media_count <= 4 %} medium-hide large-up-hide{% endif %} thumbnail-nav-btn"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
        aria-controls="GalleryThumbnails-{{ section.id }}"
        data-step="3"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </slider-component>
  {%- endif -%}
</media-gallery>
